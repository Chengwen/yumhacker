[[ if (CurrentUser.get('id') == get('user_id')) { ]]
    <div class='delete_comment'>delete</div>
[[ } ]]

<div class='comment_container'>
    <img class='avatar' src="[[= get('thumb_url') ]]">
    
    <div class='content_container'>

        <a class='user_name'>[[= get('first_name') ]] [[= get('last_name') ]]</a>

        <span class='comment_body'>[[= get('body') ]]</span>

    </div>
    <div class='date'>[[= get('formatted_time') ]]</div>
</div>