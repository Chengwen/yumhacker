<div id='main_filter'>
    [[ if (CurrentUser.logged_in()) { ]]
        <div id='following_filter_container' class='option'>
            <p>Show:</p>
            <div class='radio_container'>
                <input type='radio' name='following_filter' id='from_all' value='all' [[= (Filter.get('following_filter') == 'all' ? 'checked' : '') ]]>        
                <label class='small' for='from_all'>From All</label>
            </div>
            
            <div class='radio_container'>
                <input type='radio' name='following_filter' id='from_followed' value='followed' [[= (Filter.get('following_filter') == 'followed' ? 'checked' : '') ]]>        
                <label class='small' for='from_followed'>From Following</label>
            </div>

            <div class='radio_container'>
                <input type='radio' name='following_filter' id='from_me' value='me' [[= (Filter.get('following_filter') == 'me' ? 'checked' : '') ]]>        
                <label class='small' for='from_me'>Just Mine</label>                     
            </div>
        </div>
    [[ } ]]

    <br class='clear'>
</div>
