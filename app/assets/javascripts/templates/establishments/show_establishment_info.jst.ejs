<div class='establishment_info left_column'>
    <p class='biz_name'>[[= get('name') ]]</p>

    [[ if (get('street_number') && get('street')) { ]]
        <p class="details">[[= get('street_number') ]] [[= get('street') ]]</p>

        [[ if (get('city') && get('state') && get('zip_code')) { ]]
            <p class='details'>[[=  get('city') ]], [[= get('state') ]] [[= get('zip_code') ]]</p>
        [[ } ]]
    [[ } ]]
    
    [[ if (get('phone')) { ]]
        <p class="details phone">[[= get('phone') ]]</p>
    [[ } ]]

    <div class='details extra'>
        <p class='price'>[[- get('price_symbol') ? get('price_symbol') : '' ]]</p>
        [[ if (get('website')) { ]]
            <a class="details website" href="[[= get('website') ]]" target='_blank'>[[= get('formatted_url') ]]</a>
        [[ } ]]
        <br class='clear'>
    </div>
    
    <div class='hours_container'></div>
    <div class='endorse_btn_container'></div>
</div>

<div class='right_column'>
    <div id='establishment_photos_container'></div>
</div>

<br class='clear'>
